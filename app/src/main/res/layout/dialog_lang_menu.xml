<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <TextView
        android:id="@+id/lang_detected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Language detected:"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/source_lang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Source language"
        android:visibility="gone"/>
    <Spinner
        android:id="@+id/source_lang_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/target_lang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Target language"/>
    <Spinner
        android:id="@+id/target_lang_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>